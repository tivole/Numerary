#!/usr/bin/gnuplot

set title "Lagrange Polynomial"
set xlabel "x"
set ylabel "y"
set xrange [-5.000000:5.000000]
set yrange [0.038462:1.000000]

plot 1.0/(1.0+x*x) lc rgb '#0000ff' lw 2 lt -1 title '1.0/(1.0+x*x)', \
	'input_xy.csv' with points ls 5 lc rgb '#00ff00' ps 1.3 title 'Input Values', \
	'lagrange_xy.csv' with linespoints ls 7 lc rgb '#ff0000' lw 1.2 dt 2 ps 0.7 title 'Lagrange Polynom'

pause -1 "Hit any key to continue"
