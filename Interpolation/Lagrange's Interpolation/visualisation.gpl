#!/usr/bin/gnuplot

set title "Lagrange Polynomial"
set xlabel "x"
set ylabel "y"
set xrange [0.000000:10.000000]
set yrange [-0.958924:0.989358]

plot sin(x) lc rgb '#0000ff' lw 2 lt -1 title 'sin(x)', \
	'lagrange_xy.csv' with linespoints ls 7 lc rgb '#ff0000' lw 1.2 dt 2 title 'Lagrange Polynom', \
	'input_xy.csv' with points ls 7 lc rgb '#00ff00' ps 1.3 title 'Input Values'

pause -1 "Hit any key to continue"
